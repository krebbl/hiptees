<parent:TextEditorClass xmlns="http://www.w3.org/1999/xhtml"
                        xmlns:parent="hip.svg"
                        onkeydown="_onkeyDown"
                        onkeypress="_onkeyPress"
                        oninput="_oninput"
                        ontextInput="_ontextInput"
                        onkeyup="_onkeyUp"
                        onscroll="_onscroll"
                        onpointermove="_onpointerMove"
                        autocorrect="off"
                        autocapitalize="off"
                        autocomplete="off"
                        spellcheck="false"

        >

    <svg xmlns="http://www.w3.org/2000/svg" width="{svgWidth}" height="{svgHeight}" cid="svg" xml:space="preserve">
        <g>
            <parent:TextRenderer cid="$textContainer" maxWidth="{maxWidth}" textFlow="{textFlow}" class="text-renderer needsclick" onsizeChanged="_handleSizeChange"
                                 />
        </g>
    </svg>
</parent:TextEditorClass>