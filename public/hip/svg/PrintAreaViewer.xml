<parent:PrintAreaViewerClass xmlns="js.svg"
                             xmlns:parent="hip.svg" xmlns:js="js.core"
                             translateX="{printArea.offset.x}"
                             translateY="{printArea.offset.y}">


    <rect width="{printArea.size.width}"
          cid="border"
          height="{printArea.size.height}"
          fill="none"
            />

    <js:Template name="configurationInfo">
        <div xmlns="http://www.w3.org/1999/xhtml" class="configuration-info">
            <div selected="{showActiveViewer}">
                <div visible="{activeViewer._moving}">
                    x : {format(activeViewer._realOffset.x)}
                    y : {format(activeViewer._realOffset.y)}
                </div>
                <div visible="{not(activeViewer._moving)}">
                    w : {format(activeViewer._size.width)}
                    h : {format(activeViewer._size.height)}
                </div>
            </div>
        </div>
    </js:Template>


    <g cid="configurations"/>


    <g cid="snapLines">
        <line x1="0" x2="0" y1="0" y2="0" stroke-opacity="0" stroke="aqua"/>
        <line x1="0" x2="0" y1="0" y2="0" stroke-opacity="0" stroke="aqua"/>
    </g>

</parent:PrintAreaViewerClass>