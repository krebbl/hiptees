<parent:PrintAreaViewerClass xmlns="js.svg"
                             xmlns:parent="hip.svg" xmlns:js="js.core"
                             translateX="{printArea.offset.x}"
                             translateY="{printArea.offset.y}">


    <rect width="{printArea.size.width}"
          cid="border"
          height="{printArea.size.height}"
          fill="none"
          />

    <g translateX="{half(printArea.size.width)}" translateY="-30">
        <rect x="-55" y="0" rx="5" ry="5" width="110" height="20" style="fill:black;opacity:0.8"
              visible="{or(activeViewer._moving,activeViewer._resizing)}"/>
        <text y="13" x="0" fill="white" font-size="11" visible="{activeViewer._moving}" text-anchor="middle">x: {format(activeViewer._realOffset.x)} y:
            {format(activeViewer._realOffset.y)}
        </text>
        <text y="13" x="0" fill="white" font-size="11" visible="{activeViewer._resizing}" text-anchor="middle">w: {format(activeViewer._size.width)} h:
            {format(activeViewer._size.height)}
        </text>
    </g>

    <g cid="configurations"/>


    <g cid="snapLines">
        <line x1="0" x2="0" y1="0" y2="0" stroke-opacity="0" stroke="aqua"/>
        <line x1="0" x2="0" y1="0" y2="0" stroke-opacity="0" stroke="aqua"/>
    </g>

</parent:PrintAreaViewerClass>