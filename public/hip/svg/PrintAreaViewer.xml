<parent:PrintAreaViewerClass xmlns="js.svg"
                             xmlns:parent="hip.svg" xmlns:js="js.core"
                             translateX="{printArea.offset.x}"
                             translateY="{printArea.offset.y}">

    <!--<pattern id="muster_a" patternUnits="userSpaceOnUse" width="308" x="0"-->
    <!--y="0">-->
    <!--<image href="http://img.pr0gramm.com/2015/09/29/fa8ecc8cd5549029.jpg" width="100%"/>-->
    <!--</pattern>-->

    <rect class="print-area-boundary"
            width="{printArea.size.width}"
          cid="border"
          height="{printArea.size.height}"
          fill="none"
            />

    <g cid="configurationContainer"/>

    <g _v="{activeViewer}" visible="{showActiveViewer}" translateX="{_v._realOffset.x}" translateY="{_v._realOffset.y}"
       _handleDistance="{multiply(handleWidth,0.9)}"
       _handleRadius="{multiply(handleWidth, 1.6)}"
       _textY="{multiply(handleWidth,0.5)}"
       _fontSize="{multiply(handleWidth, 1.3)}"
       class="needsClick">

        <rect class="active-configuration-boundary"
              x="0" y="0"
              fill-opacity="0"
              width="{_v._size.width}" height="{_v._size.height}"/>

        <g translateX="{plus(_v._size.width,_handleDistance)}" translateY="{plus(_v._size.height,_handleDistance)}"
           rotation="90"
           onpointerdown="handlePointerDown('resize','rb',event,true)"
           class="configuration-handle">
            <circle r="{_handleRadius}"/>
            <text y="{_textY}" font-size="{_fontSize}" text-anchor="middle">
                &#xf065;
            </text>
        </g>
    </g>

    <g cid="snapLines" class="print-area-snaplines">
        <line x1="0" x2="0" y1="0" y2="0" stroke-opacity="0" stroke="aqua"/>
        <line x1="0" x2="0" y1="0" y2="0" stroke-opacity="0" stroke="aqua"/>
    </g>

</parent:PrintAreaViewerClass>