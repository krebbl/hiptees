<parent:ShapeConfigurationViewerClass xmlns="http://www.w3.org/2000/svg"
                                      xmlns:parent="hip.svg" xmlns:js="js.core" minWidth="5" minHeight="5">
    <js:Content name="renderer">
        <parent:ContentPlaceHolder name="shape"
                                   stroke="{configuration.stroke}"
                                   stroke-location="inside"
                                   stroke-width="{configuration.strokeWidth}"
                                   fill-opacity="{configuration.fillOpacity}"
                                   fill="{configuration.fill}"/>

    </js:Content>
</parent:ShapeConfigurationViewerClass>