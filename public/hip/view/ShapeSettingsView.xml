<view:ShapeSettingsViewClass xmlns="http://www.w3.org/1999/xhtml"
                             xmlns:view="hip.view" xmlns:ui="js.ui" xmlns:js="js.core"
                             xmlns:setting="hip.view.setting">

    <js:Content name="settings">
        <ul class="settings">
            <li>
                <a onclick="_selectSubContent(colorContent)">
                    <span class="label">
                        ${i18n.t('settings.fillColor')}
                    </span>
                    <span class="value">
                        <span class="meta">{fillColor}</span>
                        <span class="color-bubble" backgroundColor="{fillColor}"/>
                    </span>
                </a>
            </li>
            <li>
                <a onclick="_selectSubContent(strokeColorContent)">
                    <span class="label">
                        ${i18n.t('settings.strokeColor')}
                    </span>
                    <span class="value">
                        <span class="meta">{strokeColor}</span>
                        <span class="color-bubble" backgroundColor="{strokeColor}"/>
                    </span>
                </a>
            </li>
            <li>
                <a onclick="_selectSubContent(strokeContent)">
                    <span class="label">
                        ${i18n.t('settings.strokeWidth')}
                    </span>
                    <span class="value">
                        {formatNumber(configuration.strokeWidth,1)} mm
                    </span>
                </a>
            </li>
            <li>
                <a onclick="_selectSubContent(transparencyContent)">
                    <span class="label">
                        ${i18n.t('settings.opacity')}
                    </span>
                    <span class="value">
                        {formatNumber(configuration.fillOpacity,0,100)}%
                    </span>
                </a>
            </li>
        </ul>
    </js:Content>
    <js:Content cid="strokeContent">
        <div class="slider-label">
            ${i18n.t('settings.strokeWidth')}
            <strong>{formatNumber(configuration.strokeWidth,1)} mm</strong>
        </div>
        <div class="slider-wrapper">
            <ui:Slider min="0" max="10" step="0.5" oninput="_updateAttribute('strokeWidth', value, true)"
                       value="{configuration.strokeWidth}" onhandleUp="_updateAttribute('strokeWidth', value, false)"/>
        </div>
    </js:Content>

    <js:Content cid="transparencyContent">
        <div class="slider-label">
            ${i18n.t('settings.fillOpacity')}
            <strong>{formatNumber(configuration.fillOpacity,0,100)}%</strong>
        </div>
        <div class="slider-wrapper">
            <ui:Slider min="0" max="1" step="0.1" oninput="_updateAttribute('fillOpacity', value, true)"
                       value="{configuration.fillOpacity}" onhandleUp="_updateAttribute('fillOpacity', value, false)"/>
        </div>
        <div class="slider-label">
            ${i18n.t('settings.strokeOpacity')}
            <strong>{formatNumber(configuration.strokeOpacity,0,100)}%</strong>
        </div>
        <div class="slider-wrapper">
            <ui:Slider min="0" max="1" step="0.1" oninput="_updateAttribute('strokeOpacity', value, true)"
                       value="{configuration.strokeOpacity}" onhandleUp="_updateAttribute('strokeOpacity', value, false)"/>
        </div>
    </js:Content>

    <setting:ColorSetting cid="colorContent" selectedColor="{fillColor}"
                          oncolorSelect="_updateColor(event, 'fill')" showToggleColor="true"
                          oncolorToggle="_toggleFill()" enableColor="{configuration.fillOpacity}"/>

    <setting:ColorSetting cid="strokeColorContent" selectedColor="{strokeColor}"
                          showToggleColor="true"
                          enableColor="{gt(configuration.strokeWidth, 0)}"
                          oncolorToggle="_toggleStroke()"
                          oncolorSelect="_updateColor(event, 'stroke')"/>

</view:ShapeSettingsViewClass>