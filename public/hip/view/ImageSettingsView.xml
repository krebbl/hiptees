<view:ImageSettingsViewClass xmlns="http://www.w3.org/1999/xhtml"
                            xmlns:view="hip.view" xmlns:ui="js.ui" xmlns:js="js.core">

    <div class="settings-header">

    </div>
    <div class="settings-content" selected="true">
        <ui:SelectionView items="{presets}" class="filter-presets" tagName="ul" selectedItem="{selectedPreset}">
            <js:Template name="item">
                <li>
                    <a onclick="_selectPreset(item)">
                        <view:FilteredImage src="{configuration.design.image.small}" filter="${createFilter(item)}" width="50" height="auto"/>
                    </a>
                </li>
            </js:Template>
        </ui:SelectionView>

        <div>
            <div class="slider-wrapper">
                <ui:Slider min="-100" max="100" step="1" onhandleUp="_updateFilter('brightness', value)"
                           value="{configuration.filter.brightness}"/>
            </div>
            <div class="slider-wrapper">
                <ui:Slider min="-100" max="100" step="1" onhandleUp="_updateFilter('saturation', value)"
                           value="{configuration.filter.saturation}"/>
            </div>
            <div class="slider-wrapper">
                <ui:Slider min="-100" max="100" step="1" onhandleUp="_updateFilter('contrast', value)"
                           value="{configuration.filter.contrast}"/>
            </div>
            <div class="slider-wrapper">
                <ui:Slider min="-100" max="100" step="1" onhandleUp="_updateFilter('tint', value)"
                           value="{configuration.filter.tint}"/>
            </div>
            <div class="slider-wrapper">
                <ui:Slider min="-100" max="100" step="1" onhandleUp="_updateFilter('blur', value)"
                           value="{configuration.filter.blur}"/>
            </div>

        </div>
    </div>

