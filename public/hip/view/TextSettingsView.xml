<view:TextSettingsViewClass xmlns="http://www.w3.org/1999/xhtml"
                            xmlns:view="hip.view" xmlns:ui="js.ui" xmlns:js="js.core">

    <div class="settings-header">
        <a onclick="_selectSubContent('')">Back</a>
    </div>
    <div class="settings-content" selected="{isSubContentSelected('')}">
        <ul class="settings">
            <li>
                <a onclick="_selectSubContent('fontSettings')">
                    <span class="label">
                        Font-Family
                    </span>
                    <span class="value">
                        {configuration.fontFamily}
                    </span>
                </a>
            </li>
            <li>
                <a onclick="_selectSubContent('fontSize')">
                    <span class="label">
                        Font Size
                    </span>
                    <span class="value">
                        {configuration.fontSize}
                    </span>
                </a>
            </li>
            <li>
                <a>
                    <span class="label">
                        Color
                    </span>
                    <span class="value">
                        {configuration.color}
                    </span>
                </a>

            </li>
            <li>
                <div class="text-align">
                    <ui:SelectionView items="{alignments}" class="alignments" tagName="ul"
                                      selectedItem="{configuration.textAlign}">
                        <js:Template name="item">
                            <li onclick="_selectAlignment(item)">{item}</li>
                        </js:Template>
                    </ui:SelectionView>
                </div>
            </li>
            <li>
                <a>
                    <span class="label">
                        Line Height
                    </span>
                    <span class="value">
                        {configuration.lineHeight}
                    </span>
                </a>
            </li>
            <li>
                <a>
                    <span class="label">
                        Letter Spacing
                    </span>
                    <span class="value">
                        {configuration.letterSpacing}
                    </span>
                </a>
            </li>
        </ul>
    </div>
    <div class="settings-sub-content" selected="{isSubContentSelected('fontSettings')}">
        <ui:SelectionView items="{fonts}" class="settings" tagName="ul" selectedItem="{configuration.fontFamily}">
            <js:Template name="item">
                <li>
                    <a onclick="_selectFont(item)">${item}</a>
                </li>
            </js:Template>
        </ui:SelectionView>
    </div>
    <div class="settings-sub-content" selected="{isSubContentSelected('fontSize')}">
        <div>
            Font Size {configuration.fontSize} Pt
            <span float="right">
                <span class="btn-group">
                    <a onclick="_decreaseFontSize(1)">-</a>
                    <a onclick="_increaseFontSize(1)">+</a>
                </span>
            </span>
        </div>
        <div class="slider">
            Slider
        </div>
    </div>

