<view:TextSettingsViewClass xmlns="http://www.w3.org/1999/xhtml"
                            xmlns:view="hip.view" xmlns:ui="js.ui" xmlns:js="js.core">

    <div class="settings-header">
        <a onclick="_selectSubContent('')">Back</a>
        <a onclick="toggle()">Toggle</a>

    </div>
    <div class="settings-content" selected="{isSubContentSelected('')}">
        <ul class="settings">
            <li>
                <a onclick="_selectSubContent('fontSettings')">
                    <span class="label">
                        Font-Family
                    </span>
                    <span class="value">
                        <img src="./font/{_getFontImageSrc(paragraphStyle.fontFamily)}" height="20"/>
                    </span>
                </a>
            </li>
            <li>
                <a onclick="_selectSubContent('fontSize')">
                    <span class="label">
                        Font Size
                    </span>
                    <span class="value">
                        {paragraphStyle.fontSize} pt
                    </span>
                </a>
            </li>
            <li>
                <a onclick="_selectSubContent('color')">
                    <span class="label">
                        Color
                    </span>
                    <span class="value">
                        {leafColor}
                    </span>
                </a>

            </li>
            <li>
                <div class="text-align">
                    <ui:SelectionView items="{alignments}" class="alignments" tagName="ul"
                                      selectedItem="{paragraphStyle.textAlign}">
                        <js:Template name="item">
                            <li onclick="_selectAlignment(item)">{item}</li>
                        </js:Template>
                    </ui:SelectionView>
                </div>
            </li>
            <li>
                <a onclick="_selectSubContent('lineHeight')">
                    <span class="label">
                        Line Height
                    </span>
                    <span class="value">
                        {format(paragraphStyle.lineHeight)}
                    </span>
                </a>
            </li>
            <li>
                <a onclick="_selectSubContent('letterSpacing')">
                    <span class="label">
                        Letter Spacing
                    </span>
                    <span class="value">
                        {format(paragraphStyle.letterSpacing)}
                    </span>
                </a>
            </li>
        </ul>
    </div>
    <div class="settings-sub-content" selected="{isSubContentSelected('fontSettings')}">
        <ui:SelectionView items="{fontFamilies}" class="settings" tagName="ul"
                          selectedItem="{_getFontFamily(paragraphStyle.fontFamily)}">
            <js:Template name="item">
                <li>
                    <a onclick="_selectFont(item)">
                        <img src="./font/${item.image}" height="20"/>
                    </a>
                </li>
            </js:Template>
        </ui:SelectionView>
    </div>
    <div class="settings-sub-content" selected="{isSubContentSelected('fontSize')}">
        <div>
            Font Size {paragraphStyle.fontSize} Pt
        </div>
        <div class="slider-wrapper">
            <ui:Slider min="5" max="100" step="1" oninput="_updateTextSize" value="{paragraphStyle.fontSize}"/>
        </div>
    </div>
    <div class="settings-sub-content" selected="{isSubContentSelected('lineHeight')}">
        <div>
            Line Height Size {format(paragraphStyle.lineHeight)}
        </div>
        <div class="slider-wrapper">
            <ui:Slider min="0.5" max="2" step="0.1" oninput="_updateLineHeight" value="{paragraphStyle.lineHeight}"/>
        </div>
    </div>
    <div class="settings-sub-content" selected="{isSubContentSelected('letterSpacing')}">
        <div>
            Letter spacing {format(paragraphStyle.letterSpacing)}
        </div>
        <div class="slider-wrapper">
            <ui:Slider min="-2" max="10" step="0.5" oninput="_updateLetterSpacing"
                       value="{paragraphStyle.letterSpacing}"/>
        </div>
    </div>
    <div class="settings-sub-content" selected="{isSubContentSelected('color')}">
        <!--<ui:ItemsView class="hsb-color-selector" items="{hues()}" itemKey="hue">-->
            <!--<js:Template name="item">-->
                <!--<div>-->
                    <!--<js:Repeat items="{saturations()}" itemKey="saturation">-->
                        <!--<div class="color" onclick="_updateColor(background)" width="{divide(100, items.length)}%" background="#${color(hue, saturation)}"/>-->
                    <!--</js:Repeat>-->
                <!--</div>-->
            <!--</js:Template>-->
        <!--</ui:ItemsView>-->
        <div class="hsb-color-selector">
            <div class="slider-wrapper">
                <ui:Slider min="0" max="360" step="1" oninput="_updateHue(value)"
                           value="{leafColor.h}"/>
            </div>

            <div class="slider-wrapper">
                <ui:Slider min="0" max="100" step="1" oninput="_updateSaturation(value)"
                           value="{leafColor.s}"/>
            </div>

            <div class="slider-wrapper">
                <ui:Slider min="0" max="100" step="1" oninput="_updateBrightness(value)"
                           value="{leafColor.b}"/>
            </div>


        </div>
    </div>

