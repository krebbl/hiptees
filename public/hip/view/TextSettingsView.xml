<view:TextSettingsViewClass xmlns="http://www.w3.org/1999/xhtml"
                            xmlns:view="hip.view" xmlns:ui="js.ui" xmlns:js="js.core">

    <div class="settings-header">
        <a onclick="_selectSubContent('')">Back</a>
        <a onclick="toggle()">Toggle</a>

    </div>
    <div class="settings-content" selected="{isSubContentSelected('')}">
        <ul class="settings">
            <li>
                <a onclick="_selectSubContent('fontSettings')">
                    <span class="label">
                        Font-Family
                    </span>
                    <span class="value">
                        <img src="./font/{_getFontImageSrc(configuration.fontFamily)}" height="20"/>
                    </span>
                </a>
            </li>
            <li>
                <a onclick="_selectSubContent('fontSize')">
                    <span class="label">
                        Font Size
                    </span>
                    <span class="value">
                        {configuration.fontSize} pt
                    </span>
                </a>
            </li>
            <li>
                <a>
                    <span class="label">
                        Color
                    </span>
                    <span class="value">
                        {configuration.color}
                    </span>
                </a>

            </li>
            <li>
                <div class="text-align">
                    <ui:SelectionView items="{alignments}" class="alignments" tagName="ul"
                                      selectedItem="{configuration.textAlign}">
                        <js:Template name="item">
                            <li onclick="_selectAlignment(item)">{item}</li>
                        </js:Template>
                    </ui:SelectionView>
                </div>
            </li>
            <li>
                <a onclick="_selectSubContent('lineHeight')">
                    <span class="label">
                        Line Height
                    </span>
                    <span class="value">
                        {format(configuration.lineHeight)}
                    </span>
                </a>
            </li>
            <li>
                <a onclick="_selectSubContent('letterSpacing')">
                    <span class="label">
                        Letter Spacing
                    </span>
                    <span class="value">
                        {format(configuration.letterSpacing)}
                    </span>
                </a>
            </li>
        </ul>
    </div>
    <div class="settings-sub-content" selected="{isSubContentSelected('fontSettings')}">
        <ui:SelectionView items="{fontFamilies}" class="settings" tagName="ul" selectedItem="{_getFontFamily(configuration.fontFamily)}">
            <js:Template name="item">
                <li>
                    <a onclick="_selectFont(item)"><img src="./font/${item.image}" height="20"/></a>
                </li>
            </js:Template>
        </ui:SelectionView>
    </div>
    <div class="settings-sub-content" selected="{isSubContentSelected('fontSize')}">
        <div>
            Font Size {configuration.fontSize} Pt
            <span float="right">
                <span class="btn-group">
                    <a onclick="_decreaseFontSize(1)">-</a>
                    <a onclick="_increaseFontSize(1)">+</a>
                </span>
            </span>
        </div>
        <div class="slider">
            <ui:Slider min="5" max="100" step="1" oninput="_updateTextSize" value="{configuration.fontSize}"/>
        </div>
    </div>
    <div class="settings-sub-content" selected="{isSubContentSelected('lineHeight')}">
        <div>
            Line Height Size {format(configuration.lineHeight)}
        </div>
        <div class="slider">
            <ui:Slider min="0.5" max="2" step="0.1" oninput="_updateLineHeight" value="{configuration.lineHeight}"/>
        </div>
    </div>
    <div class="settings-sub-content" selected="{isSubContentSelected('letterSpacing')}">
        <div>
            Letter spacing {format(configuration.letterSpacing)}
        </div>
        <div class="slider">
            <ui:Slider min="-2" max="10" step="0.5" oninput="_updateLetterSpacing" value="{configuration.letterSpacing}"/>
        </div>
    </div>

