<parent:ImageConfigurationViewerClass xmlns="http://www.w3.org/2000/svg"
                                    xmlns:parent="hip.view" xmlns:js="js.core">

    <filter id="desaturate">
        <feColorMatrix type="matrix" values="0.3333 0.3333 0.3333 0 0
                                             0.3333 0.3333 0.3333 0 0
                                             0.3333 0.3333 0.3333 0 0
                                             0      0      0      1 0"/>
    </filter>

    <js:Content name="renderer">
        <image href="{configuration.image.url}" filter="url(#desaturate)" width="{_size.width}" height="{_size.height}" x="0" y="0"/>
    </js:Content>

</parent:ImageConfigurationViewerClass>