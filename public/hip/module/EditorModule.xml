<parent:EditorModuleClass xmlns="http://www.w3.org/1999/xhtml"
                          xmlns:parent="hip.module" xmlns:js="js.core" xmlns:svg="hip.svg" xmlns:view="hip.view"
                          xmlns:conf="js.conf">

    <js:Router cid="router">
        <conf:RouteConfiguration route="^editor$" onexec="loadEditor"/>
        <conf:RouteConfiguration route="^editor\/(\w+)" onexec="loadProduct"/>
    </js:Router>

    <js:Content name="header">
        Hiptees
    </js:Content>


    <js:Content name="content">
        <a>
            Undo
        </a>

        <div class="view-content" cid="viewContent" heightUpdatePolicy="in">
            <div class="product-viewer-wrapper" height="{viewContent.height}" width="{viewContent.height}"
                 marginLeft="{minusHalf(width)}px">
                <svg:ProductViewer height="{height}" width="{width}" product="{product}"
                                   style="display: block; -webkit-transform: translateZ(0);"/>
            </div>
        </div>

        <input cid="fileInput" type="file" onchange="handleUpload"/>

        <div class="footer">
            <a onclick="showSettings" enabled="{selectedConfiguration}">
                <i class="fa fa-pencil"/>
                Edit
            </a>
            <a onclick="showAddView">
                <i class="fa fa-plus"/>
                Add
            </a>

            <a onclick="saveProduct">
                <i class="fa fa-check"/>
                Finish
            </a>

        </div>
        <div class="setting-views" selected="{settingsSelected}">
            <view:TextSettingsView oncloseClicked="hideSettings"/>
            <view:ImageSettingsView oncloseClicked="hideSettings"/>
            <view:ShapeSettingsView oncloseClicked="hideSettings"/>
        </div>

        <div class="add-view" selected="{addViewSelected}">
            <div>
                <a onclick="add('text')">
                    <i class="fa fa-font"/>
                    Add Text
                </a>
                <a onclick="add('image')">
                    <i class="fa fa-picture-o"/>
                    Add Image
                </a>
                <a onclick="add('rectangle')">
                    <i class="fa fa-stop"/>
                    Add Rectangle
                </a>
                <a onclick="add('circle')">
                    <i class="fa fa-circle"/>
                    Add Circle
                </a>
            </div>

            <a class="close-btn" onclick="hideAddView">
                Close
                <i class="fa fa-chevron-down"/>
            </a>
        </div>


    </js:Content>

</parent:EditorModuleClass>