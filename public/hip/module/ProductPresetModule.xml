<parent:ProductPresetModuleClass xmlns="http://www.w3.org/1999/xhtml"
                                 xmlns:parent="hip.module" xmlns:js="js.core" xmlns:conf="js.conf" xmlns:ui="js.ui">

    <div class="header">
        <a onclick="goBack" class="back-btn">
            <i class="fa fa-angle-left"/>
        </a>
        <h2>Choose a template</h2>
    </div>

    <div class="content">
        <ui:ItemsView items="{products}" tagName="ul" class="preset-list">
            <js:Template name="item">
                <li>
                    <a onclick="selectProductPreset(item, event)">
                        <img src="${item.resources.MEDIUM}"/>
                        ${item.name}
                    </a>
                </li>
            </js:Template>
        </ui:ItemsView>
    </div>


</parent:ProductPresetModuleClass>