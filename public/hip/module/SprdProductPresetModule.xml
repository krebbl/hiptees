<parent:SprdProductPresetModuleClass xmlns="http://www.w3.org/1999/xhtml"
                                     xmlns:parent="hip.module" xmlns:js="js.core" xmlns:conf="js.conf" xmlns:ui="js.ui"
                                     xmlns:view="hip.view">

    <div class="header">
        <h1 class="header__logo"/>
        <h2>${i18n.t('presets.chooseAPreset')}</h2>
    </div>

    <view:BackToTop element="{content}" text="${i18n.t('general.backToTop')}"/>

    <div class="content" cid="content">
        <ui:SelectionView class="department-selection" items="{departments}">
            <js:Template name="item">
                <div class="department-selection__item">
                    <span>{item.name}</span>
                </div>
            </js:Template>
        </ui:SelectionView>
        <ui:SelectionView class="appearance-selection" items="{appearances}">
            <js:Template name="item">
                <div class="appearance-selection__item">
                    <span title="{item.name}" backgroundColor="{item.color}"/>
                </div>
            </js:Template>
        </ui:SelectionView>
        <ui:ItemsView items="{products}" tagName="ul" class="product-list">
            <js:Template name="item">
                <li>
                    <a class="product-image-wrapper" onclick="selectProductPreset(item, event)">
                        <view:LazyImage src="${item.resources.MEDIUM}?{item.__v}" scrollView="{content}"/>
                    </a>
                </li>
            </js:Template>
        </ui:ItemsView>
    </div>


</parent:SprdProductPresetModuleClass>